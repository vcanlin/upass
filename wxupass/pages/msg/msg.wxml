<view class="page">
    <view class="weui-msg">        
        <scroll-view class="v-con" scroll-y="true">
            <view class="weui-msg__icon-area">
                <icon type="success" size="93"></icon>
            </view>
            <view class="weui-msg__text-area">
                <view class="weui-msg__title">
                    <text>{{title}}</text>
                </view>
                <view class="weui-msg__desc">
                    <text class="descr">{{descr}}</text>
                </view>
            </view>
        </scroll-view>        
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="{{usepack}}">使用此加密架构</button>
                <button class="weui-btn" type="default" bindtap="select_page">不,返回重选</button>
                <button class="weui-btn" type="default" bindtap="{{godescr}}">我要了解这个加密算法</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__links">
                    <navigator url="www.baidu.com" class="weui-footer__link"></navigator>
                </view>
                <view class="weui-footer__text">Copyright © 2008-2017 密码家</view>
            </view>
        </view>
    </view>
</view>